---
import RawCode from '@components/docs/code/RawCode.astro'
import type { SimpleApiReference } from '@lib/typedoc/types/apiReferences'

interface Props extends SimpleApiReference {}

const { name, type } = Astro.props
---

<div>
  <div class="not-prose group inline-flex items-center space-x-2">
    <h3
      id={encodeURIComponent(`api-${name.toLowerCase()}`)}
      data-api-heading
      class="scroll-mt-20 text-xl font-bold lg:scroll-mt-2"
    >
      {name}
    </h3><p
      class="rounded-md border-2 border-sc-200 bg-sc-100 px-1.5 py-0.5 text-sm font-bold"
    >
      Type
    </p>
    <a
      href={`#${encodeURIComponent(`api-${name.toLowerCase()}`)}`}
      class="not-prose transition-opacity hover:text-sc-400 group-hover:opacity-100 md:opacity-0"
      data-typesense-ignore
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 256 256"
        class="size-5"
      >
        <rect width="256" height="256" fill="none"></rect>
        <path
          d="M127.88,196l-5.94,5.94a48,48,0,0,1-67.88-67.88L78.17,110A48,48,0,0,1,144,108"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="24"></path>
        <path
          d="M128.12,60l5.94-5.94a48,48,0,0,1,67.88,67.88l-24.11,24.11A48,48,0,0,1,112,148"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="24"></path>
      </svg>
      <span class="sr-only">Section titled {name}</span>
    </a>
  </div>
  <div class="not-prose mt-4 rounded-md overflow-hidden">
    <RawCode code={type} lang="ts" copyButton={false} />
  </div>
</div>
